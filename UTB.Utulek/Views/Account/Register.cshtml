@model UTB.Utulek.Models.RegisterViewModel

@{
ViewBag.Title = "Register";
Layout = "_Layout";
}

<style>
    .text-danger {
        font-size: 0.9rem;
        font-weight: bold;
        color: #ff6b6b;
    }
</style>

<div class="container d-flex justify-content-center align-items-center my-4 pb-2" style="min-height: 80vh;">
    <div class="card p-4" style="background-color: #635959; color: white; width: 100%;">
        <h3 class="text-center mb-4">Registration Form</h3>
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col">
                    <input asp-for="Name" class="form-control" placeholder="Name" style="border-radius: 15px;"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="Surname" class="form-control" placeholder="Surname" style="border-radius: 15px;"/>
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <input asp-for="Email" class="form-control" placeholder="email@gmail.com" style="border-radius: 15px;"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+420 - 123 - 456 - 789" style="border-radius: 15px;"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <input asp-for="Address" class="form-control" placeholder="Address" style="border-radius: 15px;"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <input asp-for="City" class="form-control" placeholder="City" style="border-radius: 15px;"/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="ZIP" class="form-control" placeholder="ZIP" style="border-radius: 15px;"/>
                    <span asp-validation-for="ZIP" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" style="border-radius: 15px;"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" style="border-radius: 15px;"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-light w-100" style="border-radius: 15px;">Create Account</button>
        </form>
        <div class="mt-3 text-center">
            <p>Already have an account? <a asp-controller="Account" asp-action="Login" class="text-white">Sign in here</a>.</p>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}