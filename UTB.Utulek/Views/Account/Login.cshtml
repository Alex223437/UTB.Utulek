@model UTB.Utulek.Models.LoginViewModel

@{
ViewBag.Title = "Login";
Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4" style="background-color: #635959; color: white; width: 450px;">
        <h3 class="text-center mb-4">Login</h3>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" style="border-radius: 15px;"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" style="border-radius: 15px;"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
            </div>
            <button type="submit" class="btn btn-light w-100">Sign In</button>
        </form>
        <div class="mt-3 text-center">
            <p>Don't have an account? <a asp-controller="Account" asp-action="Register" class=" text-white">Create one here</a>.</p>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}