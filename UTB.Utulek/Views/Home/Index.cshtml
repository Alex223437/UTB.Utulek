@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UTB.Utulek.Domain.Entities.Animal

@{
ViewData["Title"] = "Animal Shelter - Home";
}


<main class="container my-5 pb-2">
    <div class="row align-items-center">
        <div class="col-md-6">
            <p class="text-secondary">Best animal shelter in Czech Republic</p>
            <h1 class="fw-bold display-4">Give <span style="color:#635959">HOME</span> and LOVE<br>to those who need it so much</h1>
            <p class="mt-3 text-muted">
                Join our mission, choose a pet and take the first step towards a new friend right now!
            </p>
            <a asp-area="" asp-controller="Animals" asp-action="Index" class="btn btn-light btn-lg mt-3 text-white home__button" style="background-color: #635959;">Adopt virtually now!</a>
        </div>
        
        <div class="col-md-6 text-center">
            @if (Model != null)
            {
            <a asp-controller="Animals" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-black">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="height: 500px; object-fit: cover; width: 100%; border-radius: 10px" />
                <p class="mt-3 fw-bold">@Model.Name, @Model.Age years, Our love</p>
            </a>
            }
            else
            {
            <div class="bg-secondary d-flex justify-content-center align-items-center" style="height: 300px; width: 100%;">
                <span class="text-white">No Animal Available</span>
            </div>
            }
        </div>
    </div>
</main>