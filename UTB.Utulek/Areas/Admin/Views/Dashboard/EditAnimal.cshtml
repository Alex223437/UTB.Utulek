@model UTB.Utulek.Domain.Entities.Animal

@{
ViewBag.Title = "Edit Animal";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-4 pb-2">

    <h2>Edit Animal</h2>

    <form asp-action="EditAnimal" method="post">
        <input asp-for="Id" type="hidden" />

        <div class="mb-3">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Species</label>
            <input asp-for="Species" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Breed</label>
            <input asp-for="Breed" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Age</label>
            <input asp-for="Age" class="form-control" type="number" />
        </div>

        <!-- Пол (Gender) -->
        <div class="mb-3">
            <label>Gender</label>
            <select asp-for="Gender" class="form-select">
                @foreach (var gender in Enum.GetValues(typeof(UTB.Utulek.Domain.Entities.Gender)))
                {
                <option value="@gender" selected="@(Model.Gender == (UTB.Utulek.Domain.Entities.Gender)gender)">
                    @gender
                </option>
                }
            </select>
        </div>

        <!-- Статус здоровья (HealthStatus) -->
        <div class="mb-3">
            <label>Health Status</label>
            <select asp-for="HealthStatus" class="form-select">
                @foreach (var status in Enum.GetValues(typeof(UTB.Utulek.Domain.Entities.HealthStatus)))
                {
                <option value="@status" selected="@(Model.HealthStatus == (UTB.Utulek.Domain.Entities.HealthStatus)status)">
                    @status
                </option>
                }
            </select>
        </div>

        <!-- Статус усыновления (AdoptionStatus) -->
        <div class="mb-3">
            <label>Adoption Status</label>
            <select asp-for="AdoptionStatus" class="form-select">
                @foreach (var adoptionStatus in Enum.GetValues(typeof(UTB.Utulek.Domain.Entities.AdoptionStatus)))
                {
                <option value="@adoptionStatus" selected="@(Model.AdoptionStatus == (UTB.Utulek.Domain.Entities.AdoptionStatus)adoptionStatus)">
                    @adoptionStatus
                </option>
                }
            </select>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsAvailable" class="form-check-input" />
            <label asp-for="IsAvailable" class="form-check-label">Available for Adoption</label>
        </div>

        <div class="mb-3">
            <label>Arrival Date</label>
            <input asp-for="ArrivalDate" class="form-control" type="date" />
        </div>

        <div class="mb-3">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label>Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>