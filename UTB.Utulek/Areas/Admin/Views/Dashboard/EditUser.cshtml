@using Microsoft.AspNetCore.Mvc.TagHelpers
@using UTB.Utulek.Domain.Entities
@model UTB.Utulek.Domain.Entities.User

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container pb-2 my-4">
    <h2>Edit User</h2>
    <form asp-action="EditUser" method="post">
        <input asp-for="Id" type="hidden" />

        <div class="mb-3">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Surname</label>
            <input asp-for="Surname" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Address</label>
            <input asp-for="Address" class="form-control" />
        </div>

        <div class="mb-3">
            <label>City</label>
            <input asp-for="City" class="form-control" />
        </div>

        <div class="mb-3">
            <label>ZIP</label>
            <input asp-for="ZIP" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Role">Role</label>
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<UserRole>()" class="form-select">
            </select>
        </div>

        <div class="mb-3">
            <label>Created At</label>
            <input asp-for="CreatedAt" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label>Updated At</label>
            <input asp-for="UpdatedAt" class="form-control" readonly />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
