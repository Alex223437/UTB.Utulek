@model UTB.Utulek.Domain.Entities.AdoptionApplication

@{
ViewBag.Title = "Edit Adoption Application";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Adoption Application</h2>

<form asp-action="EditApplication" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label>Applicant</label>
        <input value="@Model.User?.Name (@Model.User?.Email)" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Animal</label>
        <input value="@Model.Animal?.Name" class="form-control" readonly />
    </div>

    <div class="form-check mb-3">
        <input asp-for="HasOtherAnimals" class="form-check-input" id="hasOtherAnimals" />
        <label for="hasOtherAnimals" class="form-check-label">Has Other Animals</label>
    </div>

    <div class="form-check mb-3">
        <input asp-for="HasYardSpace" class="form-check-input" id="hasYardSpace" />
        <label for="hasYardSpace" class="form-check-label">Has Yard Space</label>
    </div>

    <div class="mb-3">
        <label for="UserComment">User Comment</label>
        <textarea asp-for="UserComment" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Status</label>
        <select asp-for="Status" class="form-select">
            @foreach (var status in Enum.GetValues(typeof(UTB.Utulek.Domain.Entities.ApplicationStatus)))
            {
            <option value="@status" selected="@(Model.Status == (UTB.Utulek.Domain.Entities.ApplicationStatus)status)">
                @status
            </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>