@model IEnumerable<UTB.Utulek.Domain.Entities.VolunteerSchedule>

@{
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Volunteer Schedule</h2>

<table class="table">
    <thead>
    <tr>
        <th>Date</th>
        <th>Task Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var schedule in Model)
    {
    <tr>
        <td>@schedule.Date.ToShortDateString()</td>
        <td>@schedule.TaskDescription</td>
        <td>
            <a asp-action="Details" asp-route-id="@schedule.Id" class="btn btn-info">Details</a>
            <a asp-action="Edit" asp-route-id="@schedule.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@schedule.Id" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add Task</a>
<a asp-action="History" class="btn btn-info">
    View Completed Tasks
</a>